<!DOCTYPE html>
<html lang="es">
    <%-include('partials/head', {styles: ["products"]}) %>
<body>
    <%- include('partials/header') %>
    <div class="container productos">
        <div class="row">
            <div class="col">
                <h2 class="titulo-producto">Todos los productos</h2>
            </div>

            <% locals.products && products.forEach(product => { %>
                <div class="col">
                    <section class="caja-producto">
                        <a href="/products/detail/<%= product.id %>">
                            <figure class="caja-producto-imagen">
                                <img src="/images/products/<%= product.imagenProducto %>" alt="imagen del producto">
                            </figure>
                            <article class="caja-producto-data">
                                <p><%=  product.nombreProducto %></p>
                                <h2>$ <%= product.precioProducto %></h2>
								<i class="fas fa-truck"></i>
                            </article>
                        </a>
                    </section>
                </div>
                <% }) %>
        </div>
    </div>
    <%- include('partials/footer') %>
</body>
</html>